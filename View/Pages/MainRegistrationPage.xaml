<Page x:Class="WpfApp3.View.Pages.MainRegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600"
      d:DesignWidth="800"
      FontFamily="Comic Sans MS">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Source="/Images/1.jpg"
               Grid.Column="0"
               Grid.ColumnSpan="1"
               Stretch="UniformToFill"/>

        <TextBlock Text="Возрождение легендарного"
            HorizontalAlignment="Center"
            TextWrapping="Wrap"
            Foreground="White"
            FontWeight="SemiBold"
            FontSize="25"
            Margin="0,50,0,50" Width="345"
            Grid.Column="1"/>
        <TextBlock Text="Button"
            HorizontalAlignment="Center"
            TextWrapping="Wrap"
            Foreground="White"
            FontWeight="SemiBold"
            FontSize="25"
            Margin="0,80,0,0" Width="85"
            Grid.Column="1"/>

        <Border Background="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="300"
                Height="200"
                CornerRadius="25"
                Effect="{StaticResource MaterialDesignElevationShadow16}"
                Grid.Column="1">

            <Grid>
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="PeopleAdd"
                                                 Margin="0 15 3 0"
                                                 Foreground="#303050"/>
                        <TextBox Width="199"
                                 x:Name="TBLogin"
                                 Foreground="#303050"
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 materialDesign:HintAssist.Hint="Введите логин"
                                 materialDesign:HintAssist.Foreground="#303050"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                                                  materialDesign:TextFieldAssist.UnderlineBrush="#303050"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="0 5 0 0">
                        <materialDesign:PackIcon Kind="Shield"
                                                 Margin="0 15 3 0"
                                                 Foreground="#303050"/>
                        <PasswordBox Width="199"
                                     x:Name="PbPassword"
                                     Foreground="#303050"
                                     materialDesign:TextFieldAssist.HasClearButton="True"
                                     materialDesign:HintAssist.Hint="Введите пароль"
                                     materialDesign:HintAssist.Foreground="#303050"
                                     Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                     materialDesign:TextFieldAssist.UnderlineBrush="#303050"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="0 5 0 0">
                        <materialDesign:PackIcon Kind="ChairSchool"
                                                 Margin="0 5 3 0"
                                                 Foreground="#303050"/>
                        <ComboBox Width="199"
                                  x:Name="CbRole"
                                  DisplayMemberPath="RoleID"
                                  Foreground="#303050"
                                  Background="White"
                                  Style="{StaticResource MaterialDesignComboBox}"
                                  materialDesign:TextFieldAssist.UnderlineBrush="#303050"
                                  materialDesign:HintAssist.Hint="Выбрать роль"
                                  FontSize="12"/>
                    </StackPanel>

                    <Button Background="Transparent"
                            Foreground="White"
                            BorderBrush="Transparent"
                            x:Name="BtnRegistration"
                            Click="BtnRegistration_Click"
                            Margin="0 20 0 0"
                            materialDesign:ButtonProgressAssist.IndicatorForeground="#303050"
                            materialDesign:ButtonProgressAssist.IndicatorBackground="Transparent"
                            materialDesign:ButtonProgressAssist.Value="-1"
                            materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                            materialDesign:ButtonProgressAssist.IsIndeterminate="True">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Check"
                                                     Margin="0 2 3 0"/>
                            <TextBlock Text="Зарегистрироваться"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0 0 10 120"
                    Grid.Column="1">

            <TextBlock Text="ИЛИ"
                       FontSize="15"
                       Foreground="LightGray"
                       TextAlignment="Center"/>

            <Button Background="Transparent"
                    Foreground="White"
                    BorderBrush="Transparent"
                    x:Name="BtnLogin"
                    Click="BtnLogin_Click">

                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Login"
                                             Margin="0 2 3 0"/>
                    <TextBlock Text="Войти в систему"
                               TextDecorations="Underline"/>
                </StackPanel>
            </Button>

        </StackPanel>
    </Grid>
</Page>